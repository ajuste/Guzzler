<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal">
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#555"
        android:textSize="25sp"
        android:text="@string/character_edit_label_title" />
    <Gallery 
        android:id="@+id/characterTemplates" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/preview_border"
        android:spacing="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    <ImageView
        android:id="@+id/characterTemplateView"         
        android:layout_width="fill_parent" 
        android:layout_height="0dp" 
        android:layout_weight="1" 
        android:layout_gravity="center"
        android:scaleType="center"
        android:layout_marginTop="15dp" />
    <EditText   
        android:id="@+id/name"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:hint="@string/character_edit_hint_name" />
</LinearLayout>